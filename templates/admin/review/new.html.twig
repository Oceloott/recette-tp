{% extends 'base.html.twig' %}

{% block title %}Ajouter une critique{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-center text-gray-700 mb-6">Ajouter une critique</h1>

    <form action="{{ path('app_review_new') }}" method="post" class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
        {{ form_start(form) }}

        <div class="mb-4">
            <label for="rating" class="block text-gray-700 font-bold mb-2">Note :</label>
            {{ form_widget(form.rating, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="comment" class="block text-gray-700 font-bold mb-2">Commentaire :</label>
            {{ form_widget(form.comment, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="createdAt" class="block text-gray-700 font-bold mb-2">Date de création :</label>
            {{ form_widget(form.createdAt, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100', 'readonly': true } }) }}
        </div>

        <div class="mb-4">
            <label for="user" class="block text-gray-700 font-bold mb-2">Utilisateur :</label>
            {{ form_widget(form.user, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="recipe" class="block text-gray-700 font-bold mb-2">Recette associée :</label>
            {{ form_widget(form.recipe, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="flex justify-between items-center">
            <a href="{{ path('app_review_index') }}" class="text-blue-500 hover:underline">Retour à la liste</a>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                Ajouter
            </button>
        </div>

        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
