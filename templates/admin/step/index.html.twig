{% extends 'base.html.twig' %}

{% block title %}Liste des Étapes{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <h1 class="text-3xl font-bold text-center mb-6 text-gray-700">Liste des Étapes</h1>

        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
            <thead class="bg-gray-200">
                <tr>
                    <th class="px-4 py-2 text-left text-gray-600">Id</th>
                    <th class="px-4 py-2 text-left text-gray-600">Description</th>
                    <th class="px-4 py-2 text-left text-gray-600">Ordre</th>
                    <th class="px-4 py-2 text-left text-gray-600">Recette ID</th>
                    <th class="px-4 py-2 text-center text-gray-600">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for step in steps %}
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="px-4 py-2">{{ step.id }}</td>
                        <td class="px-4 py-2">{{ step.description | slice(0, 100) }}{% if step.description|length > 100 %}...{% endif %}</td>
                        <td class="px-4 py-2">{{ step.stepOrder }}</td>
                        <td class="px-4 py-2">{{ step.recipe.id }}</td>
                        <td class="px-4 py-2 text-center">
                            <a href="{{ path('app_step_edit', {'id': step.id}) }}" class="ml-4 text-yellow-500 hover:underline">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-4 py-2 text-center text-gray-500">Aucune étape trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-6 text-center">
            <a href="{{ path('app_step_new') }}" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
                Ajouter une nouvelle étape
            </a>
        </div>
    </div>
{% endblock %}
