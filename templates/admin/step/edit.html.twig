{% extends 'base.html.twig' %}

{% block title %}Modifier l'étape{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-center text-gray-700 mb-6">Modifier l'étape</h1>

    <form action="{{ path('app_step_edit', {'id': step.id}) }}" method="post" class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
        {{ form_start(form) }}

        <div class="mb-4">
            <label for="description" class="block text-gray-700 font-bold mb-2">Description :</label>
            {{ form_widget(form.description, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="stepOrder" class="block text-gray-700 font-bold mb-2">Ordre de l'étape :</label>
            {{ form_widget(form.stepOrder, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="recipe" class="block text-gray-700 font-bold mb-2">Recette associée :</label>
            {{ form_widget(form.recipe, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="flex justify-between items-center">
            <a href="{{ path('app_step_index') }}" class="text-blue-500 hover:underline">Retour à la liste</a>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                Sauvegarder
            </button>
        </div>

        {{ form_end(form) }}
            {{ include('admin/step/_delete_form.html.twig') }}

    </form>
</div>
{% endblock %}
