{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-center text-gray-700 mb-6">Modifier l'utilisateur</h1>

    <form action="{{ path('app_user_edit', {'id': user.id}) }}" method="post" class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
        {{ form_start(form) }}

        <div class="mb-4">
            <label for="firstname" class="block text-gray-700 font-bold mb-2">Prénom :</label>
            {{ form_widget(form.firstname, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="lastname" class="block text-gray-700 font-bold mb-2">Nom :</label>
            {{ form_widget(form.lastname, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="email" class="block text-gray-700 font-bold mb-2">Email :</label>
            {{ form_widget(form.email, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="email" class="block text-gray-700 font-bold mb-2">Password :</label>
            {{ form_widget(form.password, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' } }) }}
        </div>

        <div class="mb-4">
            <label for="roles" class="block text-gray-700 font-bold mb-2">Rôles :</label>
            {{ form_widget(form.roles, { 'attr': { 'class': 'w-full' } }) }}
        </div>

        <div class="mb-4">
            <label for="createdAt" class="block text-gray-700 font-bold mb-2">Date de création :</label>
            {{ form_widget(form.createdAt, { 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100', 'readonly': true } }) }}
        </div>

        <div class="flex justify-between items-center">
            <a href="{{ path('app_user_index') }}" class="text-blue-500 hover:underline">Retour à la liste</a>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                Sauvegarder
            </button>
        </div>

        {{ form_end(form) }}
            {{ include('admin/user/_delete_form.html.twig') }}
    </form>
</div>
{% endblock %}
