{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-gray-700 text-center mb-6">Mon compte</h1>

    <div class="bg-white shadow-lg rounded-lg p-6 max-w-md mx-auto">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Informations personnelles</h2>
        <ul class="text-gray-700 space-y-2">
            <li><strong>Prénom :</strong> {{ user.firstname }}</li>
            <li><strong>Nom :</strong> {{ user.lastname }}</li>
            <li><strong>Email :</strong> {{ user.email }}</li>
            <li><strong>Date de création :</strong> {{ user.createdAt|date('d/m/Y H:i') }}</li>
        </ul>
    </div>
</div>
{% endblock %}
